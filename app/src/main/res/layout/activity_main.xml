<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.fuji.platform.MainActivity">

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/btnLogin" />
    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/btnLogout" android:layout_below="@+id/btnLogin" android:layout_alignLeft="@+id/btnLogin"
            android:layout_alignStart="@+id/btnLogin"/>
    <Button
            android:text="Payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/btnPayment"
            android:layout_below="@+id/btnLogout" android:layout_alignLeft="@+id/btnLogout"
            android:layout_alignStart="@+id/btnLogout"/>
    <Button
        android:text="UserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnUserInfo"
        android:layout_below="@+id/btnPayment" android:layout_alignLeft="@+id/btnPayment"
        android:layout_alignStart="@+id/btnPayment"/>
</RelativeLayout>
